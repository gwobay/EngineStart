<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.35" >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/one_boot_start_date"
            android:textSize="25dp"
            android:id="@+id/label_get_boot_date"
            android:textColor="#ffff231a"
            android:gravity="center_horizontal" />

        <DatePicker
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:id="@+id/one_boot_date"
            android:layout_gravity="center"
            android:layout_weight="0.5" />

</LinearLayout>
    <View
        android:layout_width="2dip"
        android:layout_height="match_parent"
        android:background="#ffa520ff"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.35" >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="@string/one_boot_start_time"
            android:id="@+id/label_get_boot_time"
            android:textColor="#ffff231a"
            android:gravity="center_horizontal"
            android:layout_gravity="center" />


        <TimePicker
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:id="@+id/one_boot_time"
            android:layout_gravity="right"
            android:layout_weight="0.5" />
    </LinearLayout>
    <View
        android:layout_width="2dip"
        android:layout_height="match_parent"
        android:background="#ffa520ff" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="76dp"
        android:layout_height="330dp"
        android:layout_gravity="center_horizontal|right">

        <TextView
            android:layout_width="100dp"
            android:layout_height="146dp"
            android:layout_gravity="center"
            android:id="@+id/label_last4"
            android:textColor="#ff000000"
            android:textSize="25dp"
            android:text="@string/one_boot_active_period"
            android:gravity="center"
            android:layout_weight="0.05" />

        <EditText
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="#ffff5e3e"
            android:ems="30"
            android:id="@+id/last4"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#fff6ff22"
            android:textSize="30dp" />

        <TextView
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/editText7"
            android:text="@string/minute_long"
            android:textColor="#ff000000"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:layout_weight="0.02" />

    </LinearLayout>

    <View
        android:layout_width="2dip"
        android:layout_height="match_parent"
        android:background="#ffa520ff"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="157dp"
            android:text="@string/confirm"
            android:id="@+id/confirm_button"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffff351e"
            android:background="#ff31ff47"
            android:onClick="save1BootData"
            android:padding="5dp"
            android:textSize="30dp" />

        <Space
            android:layout_width="6dp"
            android:layout_height="49dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="161dp"
            android:text="@string/cancel"
            android:id="@+id/neglect_entry"
            android:gravity="center"
            android:textColor="#ff25c0ff"
            android:background="#fff4ff17"
            android:alpha="0.8"
            android:capitalize="words"
            android:clickable="true"
            android:textSize="30dp"
            android:onClick="doneActivity"
            android:padding="5dp" />

    </LinearLayout>

</LinearLayout>
