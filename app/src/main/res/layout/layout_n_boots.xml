<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout_nboot"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35" >

        <TextView
            android:layout_width="62dp"
            android:layout_height="200dp"
            android:layout_gravity="left"
            android:text="@string/n_boot_start_time"
            android:textSize="25dp"
            android:id="@+id/label_get_boot_time"
            android:textColor="#ffff231a"
            android:gravity="center_vertical" />

        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:id="@+id/n_boot_time_start"
            android:layout_gravity="top|right"
            android:layout_weight="0.5" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#ffa520ff"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:layout_gravity="left"
            android:id="@+id/label_active_period"
            android:textColor="#ff000000"
            android:textSize="20dp"
            android:text="@string/n_boot_active_period" />

        <EditText
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="#ffff5e3e"
            android:ems="30"
            android:id="@+id/active_period"
            android:gravity="left"
            android:layout_gravity="left"
            android:background="#fff6ff22"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="left|bottom"
            android:id="@+id/editText7"
            android:text="@string/minute"
            android:textColor="#ff000000"
            android:textSize="20dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="2dip"
    android:background="#ffa520ff"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:layout_gravity="left"
            android:id="@+id/label_idle_period"
            android:textColor="#ff000000"
            android:textSize="20dp"
            android:text="@string/n_boot_idle_period" />

        <EditText
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="#ffff5e3e"
            android:ems="30"
            android:id="@+id/idle_period"
            android:gravity="left"
            android:layout_gravity="left"
            android:background="#fff6ff22"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="left|bottom"
            android:id="@+id/editText8"
            android:text="@string/hour"
            android:textColor="#ff000000"
            android:textSize="20dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#ffa520ff"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35" >

        <TextView
            android:layout_width="62dp"
            android:layout_height="200dp"
            android:layout_gravity="left|bottom"
            android:textSize="25dp"
            android:text="@string/n_boot_end_time"
            android:id="@+id/label_get_end_time"
            android:textColor="#ff11a0ff"
            android:gravity="center" />


        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="222dp"

            android:id="@+id/n_boot_time_end"
            android:layout_gravity="top|right"
            android:layout_weight="0.5" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#ffa520ff"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:id="@+id/button"
            android:gravity="center"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textColor="#ffff351e"
            android:background="#ff31ff47"
            android:onClick="saveNBootData"
            android:padding="5dp"
            android:textSize="30dp" />

        <Space
            android:layout_width="30px"
            android:layout_height="20px"
            android:layout_weight="0.2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/neglect_phone_entry"
            android:gravity="center"
            android:layout_weight="0.5"
            android:textColor="#ff25c0ff"
            android:background="#fff4ff17"
            android:alpha="0.8"
            android:capitalize="words"
            android:clickable="true"
            android:textSize="30dp"
            android:onClick="doneActivity"
            android:padding="5dp" />

    </LinearLayout>

</LinearLayout>
